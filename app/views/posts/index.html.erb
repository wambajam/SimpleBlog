<div class="container mt-4">
  <h1>Blog Posts</h1>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= truncate(post.body, length: 100) %></td>
          <td><%= link_to 'Show', post, class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
